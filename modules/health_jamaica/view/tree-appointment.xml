<?xml version="1.0"?>
<data>
    <xpath expr="/tree" position="replace_attributes">
        <tree string="Appointments" colors="Eval('tree_color')" />
    </xpath>
    <xpath expr="/tree/field[@name=&quot;healthprof&quot;]" position="replace" />
    <xpath expr="/tree/field[@name=&quot;appointment_type&quot;]" position="replace" />
    <xpath expr="/tree/field[@name=&quot;institution&quot;]" position="replace_attributes">
        <field name="institution" expand="1" tree_invisible="1" />
    </xpath>

    <xpath expr="/tree/field[@name=&quot;patient&quot;]" position="after">
        <field name="upi" />
        <field name="sex_display" />
        <field name="age" />
    </xpath>
    <xpath expr="/tree/field[@name=&quot;state&quot;]" position="after">
        <field name="tree_color" tree_invisible="1" />
        <field name="is_today" tree_invisible="1" />
    </xpath>
</data>
