        <record model="ir.model.button-res.group" id="btngrp-BTN-GRP">
            <field name="button" ref="" />
            <field name="group" ref="" />
        </record>
         -->

         <!-- Some people can click Start Encounter -->
        <record model="ir.model.button-res.group" id="btngrp-start_encounter-records_techs">
            <field name="button" ref="health_jamaica.appt-start_encounter_button" />
            <field name="group" ref="group_records_technicians" />
        </record>
        <record model="ir.model.button-res.group" id="btngrp-start_encounter-records_admins">
            <field name="button" ref="health_jamaica.appt-start_encounter_button" />
